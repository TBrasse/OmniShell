        "newLine"   :{ "format" : "clear" },
        "path"      :{ "format" : "clear", "foreground" : "White" },
        "prompt"    :{ "format" : "clear", "foreground" : "White" }
      },
      "formats": {
      },
      "segments": {
      }
    },
    "Unix": {
      "order" : [
        "date", "platform", "azcontext", "git", "linuxVpnTest", "newLine",
        "path", "newLine",
        "prompt"
      ],
      "segments": {
      }
    }
  }
}