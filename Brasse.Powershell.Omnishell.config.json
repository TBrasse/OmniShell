    "default": {
      "order" : [
        "date", "platform", "azcontext", "git", "vpnTest", "newLine",
        "path", "newLine",
        "prompt"
      ],
      "styles" :{
        "date"      :{ "format" : "clear", "foreground" : "DarkGray" },
        "platform"  :{ "format" : "ribbon", "foreground" : "Black", "background": "DarkBlue" },
        "azcontext" :{ "format" : "ribbon", "foreground" : "Black", "background": "DarkGray" },
        "git"       :{ "format" : "ribbon", "foreground" : "Black", "background": "DarkGreen" },
